{
  "name": "hot-reload",
  "version": "1.1.0",
  "description": "Auto restart ExpressJS server and auto reload browser on file changes.",
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "nodemon index.js",
    "start:prod": "cross-env NODE_ENV=production node index.js"
  },
  "dependencies": {
    "express": "4.14.0",
    "shrink-ray": "0.1.3"
  },
  "devDependencies": {
    "browser-sync": "2.12.8",
    "cross-env": "1.0.8",
    "nodemon": "1.9.2"
  }
}